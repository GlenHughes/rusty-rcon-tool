{
  "name": "rust-rcon-tool",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/GlenHughes/rust-rcon-tool.git"
  },
  "license": "GPL-2.0",
  "author": {
    "name": "Glen Hughes"
  },
  "scripts": {
    "client": "webpack-dev-server --config webpack/webpack.dev.js --host 0.0.0.0",
    "dev": "concurrently -c blue.bold,magenta --kill-others \"yarn client\" \"cd ./server && yarn dev\"",
    "build": "webpack --config webpack/webpack.prod.js --env=production --progress --profile --colors",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "pretty-quick --staged",
        "eslint src/ --fix",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bootstrap": "^4.3.1",
    "clean-webpack-plugin": "^1.0.1",
    "compression-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^5.0.0",
    "dotenv": "^7.0.0",
    "history": "^4.7.2",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-svgo": "^7.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.0.0",
    "react-bootstrap": "^1.0.0-beta.5",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.2",
    "react-spinners": "^0.5.3",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "shortid": "^2.2.14",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.15.0",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.3.1",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "html-loader": "^0.5.5",
    "husky": "^1.3.1",
    "jest": "^24.3.1",
    "lint-staged": "^8.1.4",
    "mocha": "^6.0.2",
    "path": "^0.12.7",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "react-test-renderer": "^16.8.4",
    "redux-mock-store": "^1.5.3",
    "style-loader": "^0.23.1",
    "webpack-cli": "^3.0.8",
